<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- 생명력 표시 텍스트 -->
    <TextView
        android:id="@+id/lifeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life: 3"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- 모드 선택 ToggleButton -->
    <ToggleButton
        android:id="@+id/modeToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textOn="검정 사각형 모드"
        android:textOff="X 표시 모드"
        android:checked="false" />

    <!-- 열 힌트를 위한 상단 TableRow -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <TableRow
            android:id="@+id/topHintRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <!-- 열 힌트가 동적으로 추가됩니다. -->
        </TableRow>
    </HorizontalScrollView>

    <!-- ScrollView를 추가하여 스크롤 가능하게 설정 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*" />
    </ScrollView>

    <!-- 재시작 버튼 -->
    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over - Tap to Restart"
        android:visibility="gone"
        android:layout_marginTop="16dp" />
</LinearLayout>
